# =====================================================
# Academy App - Environment Configuration
# =====================================================

# =====================================================
# Server Configuration
# =====================================================
# Server port (default: 3000)
PORT=3000

# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# Node environment (development, production, test)
NODE_ENV=development

# =====================================================
# Database Configuration
# =====================================================
# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database name
DB_NAME=academy_app

# Database user
DB_USER=academy_user

# Database password
DB_PASSWORD=your_secure_password_here

# Database connection pool settings
DB_MIN_POOL_SIZE=2
DB_MAX_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# =====================================================
# Security Configuration
# =====================================================
# JWT secret key (use a strong, random string)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# JWT expiration time
JWT_EXPIRES_IN=7d

# JWT refresh token expiration
JWT_REFRESH_EXPIRES_IN=30d

# Password hashing rounds
BCRYPT_ROUNDS=12

# =====================================================
# CORS Configuration
# =====================================================
# Allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Allow credentials
CORS_CREDENTIALS=true

# =====================================================
# Rate Limiting Configuration
# =====================================================
# Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Rate limiting message
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later

# =====================================================
# Logging Configuration
# =====================================================
# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# Log file size in bytes (5MB)
LOG_MAX_SIZE=5242880

# Maximum number of log files
LOG_MAX_FILES=10

# Enable request logging
LOG_REQUESTS=true

# Enable database query logging
LOG_DB_QUERIES=false

# =====================================================
# Production Configuration
# =====================================================
# Number of worker processes (default: number of CPUs)
WORKERS=

# Enable clustering
ENABLE_CLUSTERING=false

# Graceful shutdown timeout in milliseconds
SHUTDOWN_TIMEOUT=10000

# =====================================================
# SSL/HTTPS Configuration (for production)
# =====================================================
# Enable HTTPS
HTTPS_ENABLED=false

# SSL certificate file path
SSL_CERT_PATH=

# SSL private key file path
SSL_KEY_PATH=

# SSL certificate chain file path
SSL_CA_PATH=

# =====================================================
# Session Configuration
# =====================================================
# Session secret
SESSION_SECRET=your_session_secret_key_here

# Session timeout in milliseconds
SESSION_TIMEOUT=3600000

# =====================================================
# File Upload Configuration
# =====================================================
# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760

# Upload directory
UPLOAD_DIR=uploads/

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# =====================================================
# Email Configuration (for notifications)
# =====================================================
# Email service provider (smtp, sendgrid, ses)
EMAIL_SERVICE=smtp

# SMTP host
SMTP_HOST=smtp.gmail.com

# SMTP port
SMTP_PORT=587

# SMTP username
SMTP_USER=your_email@gmail.com

# SMTP password
SMTP_PASS=your_app_password

# Email from address
EMAIL_FROM=noreply@academyapp.com

# Email from name
EMAIL_FROM_NAME=Academy App

# =====================================================
# Cache Configuration
# =====================================================
# Redis host (if using Redis)
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password
REDIS_PASSWORD=

# Redis database
REDIS_DB=0

# Cache TTL in seconds
CACHE_TTL=3600

# =====================================================
# Monitoring Configuration
# =====================================================
# Enable metrics collection
ENABLE_METRICS=true

# Metrics endpoint
METRICS_ENDPOINT=/metrics

# Health check endpoint
HEALTH_ENDPOINT=/health

# =====================================================
# Development Configuration
# =====================================================
# Enable hot reload
HOT_RELOAD=true

# Enable debug mode
DEBUG=false

# Enable source maps
SOURCE_MAPS=true

# =====================================================
# Testing Configuration
# =====================================================
# Test database name
TEST_DB_NAME=academy_app_test

# Test database user
TEST_DB_USER=academy_test_user

# Test database password
TEST_DB_PASSWORD=test_password

# =====================================================
# Feature Flags
# =====================================================
# Enable authentication
ENABLE_AUTH=true

# Enable file uploads
ENABLE_FILE_UPLOADS=false

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Enable background jobs
ENABLE_BACKGROUND_JOBS=false

# Enable caching
ENABLE_CACHING=false

# =====================================================
# Business Configuration
# =====================================================
# Default currency
DEFAULT_CURRENCY=USD

# Default timezone
DEFAULT_TIMEZONE=UTC

# Payment reminder days before due
PAYMENT_REMINDER_DAYS=3

# Maximum overdue days before suspension
MAX_OVERDUE_DAYS=30

# =====================================================
# API Configuration
# =====================================================
# API version
API_VERSION=v1

# API base path
API_BASE_PATH=/api

# Enable API documentation
ENABLE_API_DOCS=true

# API documentation endpoint
API_DOCS_ENDPOINT=/docs

# =====================================================
# Performance Configuration
# =====================================================
# Enable response compression
ENABLE_COMPRESSION=true

# Compression level (1-9)
COMPRESSION_LEVEL=6

# Enable request timeout
REQUEST_TIMEOUT=30000

# Enable keep-alive
KEEP_ALIVE=true

# =====================================================
# Security Headers Configuration
# =====================================================
# Content Security Policy
CSP_ENABLED=true

# Strict Transport Security
HSTS_ENABLED=true

# X-Frame-Options
X_FRAME_OPTIONS=DENY

# X-Content-Type-Options
X_CONTENT_TYPE_OPTIONS=nosniff

# =====================================================
# Backup Configuration
# =====================================================
# Database backup enabled
DB_BACKUP_ENABLED=false

# Backup directory
BACKUP_DIR=backups/

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron expression)
BACKUP_SCHEDULE=0 2 * * *

# =====================================================
# External Services Configuration
# =====================================================
# Payment gateway API key
PAYMENT_GATEWAY_KEY=

# Payment gateway secret
PAYMENT_GATEWAY_SECRET=

# Analytics service key
ANALYTICS_KEY=

# Error tracking service key
ERROR_TRACKING_KEY=

# =====================================================
# Development Tools Configuration
# =====================================================
# Enable Swagger UI
ENABLE_SWAGGER=true

# Enable GraphQL Playground
ENABLE_GRAPHQL_PLAYGROUND=false

# Enable database admin panel
ENABLE_DB_ADMIN=false

# =====================================================
# Legal and Compliance
# =====================================================
# Privacy policy URL
PRIVACY_POLICY_URL=

# Terms of service URL
TERMS_URL=

# Cookie policy
COOKIE_POLICY_URL=

# GDPR compliance
GDPR_COMPLIANCE=true

# =====================================================
# Custom Configuration
# =====================================================
# Add any custom environment variables here
# CUSTOM_VAR=value
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Email Configuration (if needed for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Application Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
PAYMENT_GRACE_PERIOD_DAYS=7
